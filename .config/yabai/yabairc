#!/usr/bin/env sh

# ==============================================================================
# Yabai Configuration
# https://github.com/koekeishiya/yabai/wiki
# ==============================================================================

# --- Customizable Colors (Nord-inspired) ---
ACTIVE_BORDER="0xffe1e3e4"
INACTIVE_BORDER="0xff494d64"
INSERT_FEEDBACK="0xffd75f5f"

# --- Scripting Addition (required for some features) ---
# See: https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition

# Remove and add signals for SketchyBar integration
yabai -m signal --remove "sketchybar_space_change" 2>/dev/null
yabai -m signal --remove "sketchybar_front_app" 2>/dev/null

yabai -m signal --add event=space_changed action="sketchybar --trigger space_change" label="sketchybar_space_change"
yabai -m signal --add event=window_focused action="sketchybar --trigger front_app_switched" label="sketchybar_front_app"
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# Load scripting addition (requires sudoers config)
sudo yabai --load-sa

# ==============================================================================
# Global Settings
# ==============================================================================

yabai -m config \
    external_bar                 all:35:0 \
    menubar_opacity              1.0 \
    mouse_follows_focus          off \
    focus_follows_mouse          off \
    display_arrangement_order    default \
    window_origin_display        default \
    window_placement             second_child \
    window_insertion_point       focused \
    window_zoom_persist          on \
    window_shadow                on \
    window_animation_duration    0.0 \
    layout_animation_duration    0.0 \
    window_animation_easing      ease_out_circ \
    window_opacity_duration      0.0 \
    active_window_opacity        1.0 \
    normal_window_opacity        0.92 \
    window_opacity               off \
    insert_feedback_color        $INSERT_FEEDBACK \
    split_ratio                  0.50 \
    split_type                   auto \
    auto_balance                 off \
    top_padding                  6 \
    bottom_padding               6 \
    left_padding                 6 \
    right_padding                6 \
    window_gap                   6 \
    layout                       bsp \
    mouse_modifier               fn \
    mouse_action1                move \
    mouse_action2                resize \
    mouse_drop_action            swap

# ==============================================================================
# Window Rules
# ==============================================================================

# Unmanaged or floating apps
yabai -m rule --add app="^(System Settings|Calculator|Logi Options\+|Activity Monitor|Anypoint Studio|AnypointStudio|Anypoint Studio Launcher|Find/Replace)$" manage=off grid=1:2:1:0:1:1
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Preview$" manage=off
yabai -m rule --add app="^System Preferences$" manage=off

# Example: assign apps to spaces (uncomment and adjust as needed)
# yabai -m rule --add app="^Firefox$" space=2
# yabai -m rule --add app="^Visual Studio Code$" space=3

# Example: float and center specific windows (uncomment and adjust as needed)
# yabai -m rule --add app="^Calculator$" manage=off sticky=on layer=above

# ==============================================================================
# Border Settings (JankyBorders)
# ==============================================================================

borders active_color=$ACTIVE_BORDER inactive_color=$INACTIVE_BORDER width=5.0 &

# ==============================================================================
# Finalization
# ==============================================================================